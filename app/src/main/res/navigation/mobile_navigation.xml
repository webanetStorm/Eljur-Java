<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_schedule">

    <fragment
        android:id="@+id/navigation_schedule"
        android:name="com.example.eljur.ui.schedule.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/fragment_schedule" />

    <fragment
        android:id="@+id/navigation_assignments"
        android:name="com.example.eljur.ui.assignments.AssignmentsFragment"
        android:label="@string/title_assignments"
        tools:layout="@layout/fragment_assignments" />

    <fragment
        android:id="@+id/navigation_grades"
        android:name="com.example.eljur.ui.grades.GradesFragment"
        android:label="@string/title_grades"
        tools:layout="@layout/fragment_grades" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.eljur.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>
